// Review Schema for testimonials (enables star ratings in search results)
const reviewSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Alimor - Food Journal & Symptom Tracker App",
  "description": "Free food diary and meal tracker app for iOS. Track what you eat and how you feel without calorie counting.",
  "brand": {
    "@type": "Brand",
    "name": "Alimor"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "reviewCount": "5",
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": testimonials.map(t => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": t.name
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "5",
      "bestRating": "5"
    },
    "reviewBody": t.text
  }))
};
